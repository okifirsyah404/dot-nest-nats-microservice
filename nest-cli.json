{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "generateOptions": {
    "spec": false
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "app-config": {
      "type": "library",
      "root": "libs/app-config",
      "entryFile": "index",
      "sourceRoot": "libs/app-config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/app-config/tsconfig.lib.json"
      }
    },
    "app-cache": {
      "type": "library",
      "root": "libs/app-cache",
      "entryFile": "index",
      "sourceRoot": "libs/app-cache/src",
      "compilerOptions": {
        "tsConfigPath": "libs/app-cache/tsconfig.lib.json"
      }
    },
    "dicebear": {
      "type": "library",
      "root": "libs/dicebear",
      "entryFile": "index",
      "sourceRoot": "libs/dicebear/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dicebear/tsconfig.lib.json"
      }
    }
  }
}